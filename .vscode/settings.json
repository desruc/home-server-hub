{
  "files.exclude": {
    ".git/": true,
    "node_modules/": false
  },
  "search.exclude": {
    "**/node_modules": true
  },
  "editor.rulers": [85, 100, 120],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "eslint.workingDirectories": [
    {
      "directory": "./client",
      "changeProcessCWD": true
    },
    {
      "directory": "./api",
      "changeProcessCWD": true
    }
  ]
}
